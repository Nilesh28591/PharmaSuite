@{
    ViewBag.Title = "Doughnut Chart Example";
}

<h2>Doughnut Chart</h2>

<!-- Step 1: Canvas to draw chart -->
<canvas id="myChart" width="400" height="400"></canvas>

<!-- Step 2: Chart.js CDN -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<!-- Step 3: Chart Initialization Script -->
<script>
    const data = {
        labels: [
            'Red',
            'Blue',
            'Yellow'
        ],
        datasets: [{
            label: 'My First Dataset',
            data: [300, 50, 100],
            backgroundColor: [
                'rgb(255, 99, 132)',
                'rgb(54, 162, 235)',
                'rgb(255, 205, 86)'
            ],
            hoverOffset: 4
        }]
    };

    const config = {
        type: 'doughnut',
        data: data,
    };

    // Create the chart
    new Chart(
        document.getElementById('myChart'),
        config
    );
</script>
