<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EstatePro</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EstatePro.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

</head>
<body>
    <header>
        @{
            var role = Context.Session.GetString("Role");
        }

        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <h4 class="navbar-brand mb-0 text-white">EstatePro</h4>

            <div class="collapse navbar-collapse">
                <ul class="navbar-nav mr-auto">

                    @if (string.IsNullOrEmpty(role))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="LogReg" asp-action="Login">Login</a>
                        </li>
                    }
                    else if (role == "Admin")
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Property" asp-action="Index">Properties</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Appointment" asp-action="Index">Appointments</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Booking" asp-action="BookingRequests">Bookings</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Transaction" asp-action="getAllTransactions">Transactions</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Lease" asp-action="Index">Lease Management</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Review" asp-action="Index">Reviews</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Report" asp-action="Index">Reports</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="LogReg" asp-action="Logout">Logout</a></li>
                    }
                    else if (role == "Agent" || role == "Seller")
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Property" asp-action="Index">Properties</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Appointment" asp-action="Index">Appointments</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Booking" asp-action="BookingRequests">Bookings</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Transaction" asp-action="getAllTransactions">Transactions</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Lease" asp-action="Index">Lease Management</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Review" asp-action="Index">Reviews</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="LogReg" asp-action="Logout">Logout</a></li>
                    }
                    else if (role == "Buyer")
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="UserDashboard" asp-action="Index">Dashboard</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Property" asp-action="Browse">Properties</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Appointment" asp-action="Index">Appointments</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Booking" asp-action="Index">Bookings</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Transaction" asp-action="getTransactionById">Transactions</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Review" asp-action="Index">Reviews</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="LogReg" asp-action="Logout">Logout</a></li>
                    }
                    else if (role == "Tenant")
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="UserDashboard" asp-action="Index">Dashboard</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Property" asp-action="Browse">Properties</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Appointment" asp-action="Index">Appointments</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Booking" asp-action="Index">Bookings</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="TenantLease" asp-action="Index">Lease Agreement</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Review" asp-action="Index">Reviews</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="LogReg" asp-action="Logout">Logout</a></li>
                    }
                </ul>
            </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - EstatePro - <a asp-area="" asp-controller="Home" asp-action="Index">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>